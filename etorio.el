(defun etorio-move (dx dy)
  (if (eq dx -1)
      (left-char)
      )
  
 (if (eq dx 1)
      (right-char)
 )

 (if (eq dy -1)
     (previous-line)
     ) 

 (if (eq dy 1)
     (next-line)
     )
)

